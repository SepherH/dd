{
    "name": "drunk-driving-offender-registry",
    "version": "0.1.0",
    "description": "酒駕累犯名單整合平台",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "bun run src/index.ts",
        "dev": "bun --watch run src/index.ts",
        "crawler": "bun run src/crawler/index.ts",
        "test": "bun test",
        "build": "bun build src/index.ts --target=bun --outdir=dist",
        "typecheck": "tsc --noEmit",
        "migrate": "knex migrate:latest --knexfile=src/database/knexConfig.ts",
        "migrate:rollback": "knex migrate:rollback --knexfile=src/database/knexConfig.ts",
        "seed": "knex seed:run --knexfile=src/database/knexConfig.ts"
    },
    "keywords": [
        "drunk-driving",
        "registry",
        "crawler",
        "openai"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.10.0",
        "cheerio": "^1.1.0",
        "cron": "^3.1.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "knex": "^3.1.0",
        "mariadb": "^3.2.2",
        "mysql2": "^3.14.1",
        "openai": "^4.16.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "bun-types": "^1.2.18",
        "typescript": "^5.3.3"
    }
}
